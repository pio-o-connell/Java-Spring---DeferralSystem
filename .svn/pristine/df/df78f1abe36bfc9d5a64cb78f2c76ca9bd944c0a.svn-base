<%@ include file="/WEB-INF/jsp/include.jsp"%>

<!-- @author Julia Foden -->

<h4 style="position:relative; bottom:60px">${message}</h4>

<table  data-role="table" data-mode="columntoggle" class="ui-responsive" id="myTable">
  <thead >
    <tr>
    <th data-priority="2">Student Id</th>
    <th>First name</th>
    <th>Last name</th>
    <th data-priority="3">Programme Id</th>
    <th data-priority="4">Email</th>     
    </tr>
  </thead>
  <tbody>
    <tr>
     
 		<td><h3>${id}</h3></td>
      <td><h3>${firstname}</h3></td>
      <td><h3>${lastname}</h3></td>
      <c:choose>
	  	<c:when test="${not empty programme}">
	  		<td><a href="<%= request.getContextPath() %>/programme/display/id/${programme}"
						class="ui-btn ui-corner-all">${programme}</a></td>
	  	</c:when>
	  	<c:otherwise>
	  		<td><h3>No programme</h3></td>
	  	</c:otherwise>
	  </c:choose>
      <td><h3>${email}</h3></td>          
    </tr>
  </tbody>
  </table>  
  
  <c:if test="${not empty modules}">
  <p >Modules:</p>
  	<table data-role="table" id="moduleTable">
  		<thead>
  			<tr >
  				<th>Module Id</th>
  			</tr>
  		</thead>
  		
  		<tbody>
  		<c:forEach var="moduleId" items="${modules}" varStatus="status">
  			<tr>
  				<td style="position:relative; left: 25%; top:20px "><a href="<%= request.getContextPath() %>/module/list/id/${moduleId}"
						class="ui-btn ui-btn-inline ui-corner-all">${moduleId}</a></td>
  			</tr>
  		</c:forEach> 
  		</tbody>
  	</table>
  
  </c:if>
  <c:if test="${empty modules}">
		<div class="notification warning">
		<p>No modules</p>
	</div>
	</c:if>
	
	<c:if test="${not empty deferrals}">
	<p style="position:relative; bottom:170px">Deferrals:</p>
  	<table style="position:relative; bottom:200px" data-role="table" id="deferralTable">
  		<thead>
  			<tr>
  				<th>Deferral Id</th>
  				<th>Module Id</th>
  			</tr>
  		</thead>
  		
  		<tbody>
  		<c:forEach var="deferral" items="${deferrals}" varStatus="status">
  			<tr>
  				<td>${deferral.defId}</td>
  				<td><a href="<%= request.getContextPath() %>/module/list/id/${deferral.moduleId}"
						class="ui-btn ui-btn-inline ui-corner-all">${deferral.moduleId}</a></td>
  			</tr>
  		</c:forEach>
  		</tbody>
  	</table>
  	<div data-role="main" class="ui-content">
  			<a href= "<%= request.getContextPath() %>/deferral/advancedlist/studentId/${id}"
  				class="ui-btn ui-corner-all">View this student's deferrals</a>
  		</div>
  </c:if>
  <c:if test="${empty deferrals}">
		<div class="notification warning">
		<p>No deferrals</p>
	</div>
	</c:if>
	
	
 <a href="#popupDialog" data-rel="popup" data-position-to="window" data-transition="pop" class="ui-btn ui-corner-all ui-icon-delete ui-btn-icon-left">Delete student</a>
<div data-role="popup" id="popupDialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" >
    <div role="main" class="ui-content">
    	<p>Are you sure you want to delete this student?</p>
        <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back">Cancel</a>
        <a href="<%= request.getContextPath() %>/student/delete/id/${id}" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-transition="flow">Delete</a>
    </div>
</div>	 
	